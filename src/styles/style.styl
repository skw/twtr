@import 'lib/bootstrap/bootstrap.styl' // bootstrap
@import 'lib/bootstrap/responsive.styl' // bs resp
@import 'lib/bg.styl' // base64 bg textures

// --------------------------------------------------
// - Vars
// --------------------------------------------------
// - Colors
$a_primary = #4d787a
$a_secondary = #93bcbe
$highlight = #FF9326

// --------------------------------------------------
// - Custom classes
// --------------------------------------------------
// - image replacement class
.ir
	font 0/0 a
	text-shadow none
	color transparent
	
// --------------------------------------------------
// - Main Styles
// --------------------------------------------------
// - Body
body
	width 100%
	*zoom 1
	font-family 'Lucida Grande', Verdana , sans-serif
	font-size 0.8em
	line-height 1.4em
	
	// - Globals
	a
		text-decoration none
	a:hover
		text-decoration none
	
	// - SLEEP
	#sleep
		background-color #000
		position absolute
		width 100%
		height 100%
		z-index 999999999
		display none
		div
			font-size 10em
			font-family sans-serif
			color #FFF
			width 100%
			text-align center
			margin-top 33%
	// - Header
	.header
		background-color #000
		@extend .noise
		a 
			color #CCC 
		a:hover
			color #FFF
		.container
			.row
				padding 20px 0
				.span4
					header
						a.logo
							//
				.span8
					text-align right
	
	// - Main		
	.main
		background-color #FFF
		.container
			.row
					padding 20px 0

	// - Footer
	.footer
		background-color #000
		footer
			margin-left auto
			margin-right auto
			padding 40px 0
			text-align center
			color #CCC
			a 
				color #CCC
			a:hover
				color #FFF

